<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PictureSamplingTest">

    <org.opencv.android.JavaCameraView
        android:id = "@+id/sampling_camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id = "@+id/start_test_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/start_test_button"
        android:layout_gravity="center"/>

    <TextView
        android:id = "@+id/state_test_text"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background = "#00000000"
        android:textSize = "80dp"
        android:textColor = "#FF000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="gravity"
        android:visibility="invisible"/>
    <ImageView
        android:id = "@+id/test_result_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>
    <ImageView
        android:id = "@+id/test_result_end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>




</FrameLayout>
