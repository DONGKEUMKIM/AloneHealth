<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="350dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="#555"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id = "@+id/alertTitleLayout"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text = "운동 이름"
            android:textAlignment="center"
            android:layout_marginTop="28dp"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text = "SET"
            android:textAlignment="center"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="30dp"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text = "횟수"
            android:textAlignment="center"
            android:layout_marginTop="28dp"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:id = "@+id/alertItemLayout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#fff">
        <ListView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id  = "@+id/alertExerciselist"
            android:background="#fff">
        </ListView>
        <EditText
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:hint = "SET"
            android:background="#fff"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:inputType="number"
            android:digits = "0123456789"
            android:id = "@+id/alertSet"
            />
        <EditText
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:hint="횟수"
            android:background="#fff"
            android:textAlignment="center"
            android:inputType="number"
            android:digits = "0123456789"
            android:id = "@+id/alertNumber"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id = "@+id/alertButtonLayout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#EEE">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id = "@+id/alertAddButton"
            android:background="#fff"
            android:text="추가"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="150dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id = "@+id/alertCancelButton"
            android:background="#fff"
            android:text = "취소"/>
    </LinearLayout>


</LinearLayout>